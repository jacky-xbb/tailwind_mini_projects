<div class="flex items-center justify-center min-h-screen bg-slate-100">
  <div class="flex flex-col justify-center p-6 space-y-6 bg-white md:flex-row md:p-16 md:space-y-0 md:space-x-4">
    <%= image_tag "headphone.png", class: "h-64 mx-auto hover:scale-105 duration-200 md:h-48" %>

    <div class="flex flex-col space-y-6">
      <div class="flex flex-col text-center space-y-4 md:text-left">
        <div>
          <div class="inline-block px-3 py-1 bg-black text-white text-sm rounded-full">
            Free Shipping
          </div>
        </div>

        <h1 class="max-w-sm text-2xl font-semibold">
          Razer Kraken Kitty Edt Gaming Headset Quartz
        </h1>

        <div class="flex flex-col space-y-2 text-center md:text-left">
          <p class="line-through">$799</p>
          <p class="text-4xl font-bold">$599</p>
          <p class="text-sm text-gray-300">This offer is valid until April 2rd or as long as stock</p>
        </div>

        <%= button_to "#", class: "w-full bg-blue-500 text-white border-b-8 border-b-blue-700 px-8 py-4 rounded-lg
        hover:bg-blue-700 hover:border-b-0 hover:border-t-8 hover:border-t-blue-700 duration-200 hover:shadow-lg" do %>
          Add to cart
        <% end %>

        <div class="flex items-center space-x-3" >
          <div class="h-3 w-3 bg-green-400 rounded-full hover:animate-ping"></div>
          <div>50+ pcs. in stock</div>
        </div>

        <div class="flex flex-col space-y-4 md:flex-row md:space-y-0 md:space-x-4">
          <%= button_to "#", class: "w-full flex items-center justify-center space-x-3 border-2 px-5 py-3 border-grey-300 rounded-lg shadow-sm
            hover:shadow-lg hover:-translate-y-0.5 duration-200" do %>
            <%= image_tag "weight.png", class: "w-8" %>
            <span>Add to cart</span>
          <% end %>
          <%= button_to "#", class: "w-full flex items-center justify-center space-x-3 border-2 px-5 py-3 border-grey-300 rounded-lg shadow-sm
            hover:shadow-lg hover:-translate-y-0.5 duration-200" do %>
            <%= image_tag "heart.png", class: "w-8" %>
            <span>Add to wishlist</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
