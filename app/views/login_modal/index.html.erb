<div class="flex items-center justify-center min-h-screen bg-rose-50">
  <div class="flex bg-white rounded-lg">
    <div class="flex flex-col justify-center space-y-8 p-4 md:p-8">
      <h1 class="text-4xl font-mono font-bold">Log In</h1>
      <p class="max-w-sm font-light">Log in to your account to upload or download pictures, videos or music.</p>
      <input
         type="email"
         placeholder="Enter you email address"
         class="px-4 py-5 border border-gray-300 rounded-md"
      />

      <div class="flex flex-col space-y-4 md:flex-row md:justify-between md:items-center md:space-y-0">
        <%= link_to "Forgot password", "#", class: "text-sm text-light text-center text-cyan-700" %>

        <%= button_to "#", class: "w-full md:w-auto flex justify-center px-4 py-5
          text-white bg-cyan-500 space-x-2 rounded-md hover:bg-cyan-700 shadow-md hover:shadow-lg hover:-translate-y-0.5 duration-200" do %>
          <div class="text-white">Next</div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
          </svg>
        <% end %>
      </div>

      <div class="border-b border-b-gray-300 w-full"></div>


      <%# Bottom Content %>
      <p class="text-sm font-light text-center text-gray-400">
        or log in with
      </p>

      <%# Bottom Buttons Container %>
      <div class="flex flex-col space-y-4 space-x-0 md:flex-row md:space-x-4 md:space-y-0">
        <%= link_to  "#", class: "md:w-auto flex items-center justify-center w-full p-4 space-x-4 rounded-md font-sans font-light
          hover:bg-opacity-90 shadow-sm hover:shadow-lg border hover:-translate-y-0.5 duraton-200" do %>
          <%= image_tag "facebook.png", class: "w-9" %>
          <div>Facebook</div>
        <% end %>
        <%= link_to  "#", class: "md:w-auto flex items-center justify-center w-full p-4 space-x-4 rounded-md font-sans font-light hover:bg-opacity-90 shadow-sm hover:shadow-lg border hover:-translate-y-0.5 duraton-200" do %>
          <%= image_tag "google.png", class: "w-9" %>
          <div>Google</div>
        <% end %>
      </div>

    </div>
    <%= image_tag "image.jpg", class: "w-[430px] hidden md:block" %>
  </div>
</div>
