<div class="flex items-center justify-center min-h-screen bg-zinc-700">
  <div class="bg-zinc-800 p-4 space-y-6 flex flex-col md:flex-row md:space-y-0">
   <%= image_tag "email-image.jpg", class: "h-96 rounded-lg hover:scale-105 duration-200 md:h-64 md:rounded-r-none" %>

    <div class="p-6 space-y-6 md:p-12">
      <h2 class="font-serif text-white text-lg text-center font-semibold md:text-left">
        Get diet and fitness tips in your inbox
      </h2>

      <p class="max-w-xs text-white text-xs text-center md:text-left">
        Eat better and exercise better. Sign up for the Diet&Fitness newsletter.
      </p>

      <%# Email subscribe %>
      <div class="space-y-4 flex flex-col md:flex-row md:space-y-0 md:space-x-3">
        <input
           type="text"
           class="w-full px-4 p-2 border-b border-zinc-600 bg-zinc-800 text-center"
           placeholder="Enter your email address"
        />

        <%= button_to "#", class: "w-full px-5 py-3 text-white bg-lime-500 rounded-md hover:bg-lime-700 duration-200" do %>
          Subscribe
        <% end %>
      </div>

    </div>
  </div>
</div>
